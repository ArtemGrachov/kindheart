.form-wrap
    .form-left
        +form-group([{name:'Ім\'я',id:prefix + 'Firstname'},{name:'Фамілія',id: prefix +'Lastname'}])
        +form-group({name:'Назва компанії, організації',id:prefix +'Org'})
