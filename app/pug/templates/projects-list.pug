extends ../layout.pug
include ../mixins/projects-item.pug
include ../mixins/projects-tab.pug

block content
    .projects
        .projects-carousel-wrap
            ul.projects-carousel
                each category,index in carousel
                    - var cls ='projects-carousel-item'
                    if index == 2
                        - cls += ' active'
                    li(class=cls)
                        .title #{category.name}
                        .projects-carousel__count #{category.count}
        .projects-content
            include ../elements/projects-filter.pug
            ul.projects-categories
                li.active
                    +projects-tab(isArchive)
                li
                    +projects-tab(isArchive)
                li
                    ul.projects-list
                        block list
                    .projects-more
                        a(href="#").projects-more__btn
                            | Показати ще 
                            span.red 6
                            |  з 
                            span.red 18
                li
                    +projects-tab(isArchive)